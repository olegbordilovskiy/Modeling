<Window x:Class="AKG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AKG"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Canvas x:Name="ModelCanvas" Background="Black"/>

        <!-- Черный квадрат -->
        <Rectangle Width="126" Height="70" Fill="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,8,0,0" RadiusX="10" RadiusY="10"/>

        <!-- Используем TextBox для отображения текста -->
        <TextBlock x:Name="Delay" Text="Delay: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,10,0,0" Foreground="White"/>

        <TextBlock x:Name="Vertices" Text="Vertices: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,31,0,0" Foreground="White"/>
        <TextBlock x:Name="Faces" Text="Polygons: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,52,0,0" Foreground="White"/>
    </Grid>
</Window>
